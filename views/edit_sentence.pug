extends layout

block content
  h1 #{title}
  form(method='POST', action='/sentences/edit/'+sentence._id)
    #form-group
      label Title:
      textarea.form-control(name='title')= sentence.title
    #form-group
      label Body:
      textarea.form-control(name='body')= sentence.body
    br
    input.btn.btn-primary(type='submit',value='Submit')
